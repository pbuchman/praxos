{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "context7@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "playwright@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": ".claude/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": ".claude/hooks/validate-coverage-commands.sh" },
          { "type": "command", "command": ".claude/hooks/validate-terraform.sh" },
          { "type": "command", "command": ".claude/hooks/validate-gcloud-resources.sh" },
          { "type": "command", "command": ".claude/hooks/validate-ci-output-capture.sh" },
          { "type": "command", "command": ".claude/hooks/validate-verify-workspace.sh" }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [{ "type": "command", "command": ".claude/hooks/validate-coverage-config.sh" }]
      }
    ]
  }
}
