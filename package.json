{
  "name": "intexuraos",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc -b",
    "clean": "rm -rf apps/*/dist packages/*/dist packages/*/*/dist node_modules/.cache",
    "verify:package-json": "node scripts/verify-package-json.mjs",
    "verify:boundaries": "node scripts/verify-boundaries.mjs",
    "verify:common": "node scripts/verify-common.mjs",
    "emulator:start": "docker compose -f docker/firestore/docker-compose.yaml up -d",
    "emulator:stop": "docker compose -f docker/firestore/docker-compose.yaml down",
    "emulator:logs": "docker compose -f docker/firestore/docker-compose.yaml logs -f",
    "ci": "npm run typecheck && npm run lint && npm run verify:package-json && npm run verify:boundaries && npm run verify:common && npm run format:check && npm run test:coverage && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-boundaries": "^4.2.2",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
