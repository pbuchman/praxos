{
  "name": "intexuraos",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "npm run build --workspaces --if-present",
    "build:all": "node scripts/build-all-services.mjs",
    "clean": "rm -rf apps/*/dist packages/*/dist packages/*/*/dist node_modules/.cache",
    "verify:package-json": "node scripts/verify-package-json.mjs",
    "verify:boundaries": "node scripts/verify-boundaries.mjs",
    "verify:common": "node scripts/verify-common.mjs",
    "ci": "npm run typecheck && npm run lint && npm run verify:package-json && npm run verify:boundaries && npm run verify:common && npm run format && npm run test:coverage && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "eslint-plugin-boundaries": "^5.3.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "optionalDependencies": {
    "@img/sharp-libvips-linux-x64": "^1.2.4",
    "@img/sharp-linux-x64": "^0.34.5",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.8"
  },
  "overrides": {
    "source-map": "^0.7.6",
    "magic-string": "^0.30.0"
  }
}
