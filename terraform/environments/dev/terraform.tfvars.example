# IntexuraOS Dev Environment Terraform Variables
# Copy this file to terraform.tfvars and fill in your values.
# DO NOT commit terraform.tfvars to version control.

# GCP Project ID (required)
project_id = "your-gcp-project-id"

# GCP Region (default: europe-central2)
region = "europe-central2"

# Environment name
environment = "dev"

# GitHub owner (your username or organization)
github_owner = "your-github-username"

# GitHub repository name
github_repo = "intexuraos"

# GitHub branch to trigger builds
github_branch = "development"

# Cloud Build GitHub connection name
github_connection_name = "github-pbuchman"

# Enable Load Balancer for web app SPA hosting
enable_load_balancer = true

# Domain name for the web app (requires DNS A record pointing to LB IP)
web_app_domain = "intexuraos.cloud"

# Enable LLM API audit logging (logs all LLM calls to Firestore)
audit_llms = true

