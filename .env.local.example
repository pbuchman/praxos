# IntexuraOS Local Development Environment
# Copy this file to .env.local and fill in your values.
#
# The dev.mjs orchestrator sets emulator environment variables automatically.
# This file is for additional configuration (external APIs, auth, etc.)

# =============================================================================
# Emulators (set automatically by npm run dev)
# =============================================================================
# FIRESTORE_EMULATOR_HOST=localhost:8101
# PUBSUB_EMULATOR_HOST=localhost:8102
# STORAGE_EMULATOR_HOST=http://localhost:8103

# =============================================================================
# Authentication (Auth0)
# =============================================================================
INTEXURAOS_AUTH_JWKS_URL=https://intexuraos.eu.auth0.com/.well-known/jwks.json
INTEXURAOS_AUTH_ISSUER=https://intexuraos.eu.auth0.com/
INTEXURAOS_AUTH_AUDIENCE=urn:intexuraos:api

# Auth0 Management (for user-service)
INTEXURAOS_AUTH0_DOMAIN=intexuraos.eu.auth0.com
INTEXURAOS_AUTH0_CLIENT_ID=your-auth0-client-id
INTEXURAOS_AUTH0_SPA_CLIENT_ID=your-spa-client-id

# =============================================================================
# Encryption Keys (generate with: openssl rand -hex 32)
# =============================================================================
INTEXURAOS_TOKEN_ENCRYPTION_KEY=your-32-byte-hex-encryption-key
INTEXURAOS_ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# =============================================================================
# External APIs
# =============================================================================

# WhatsApp Business Cloud API
INTEXURAOS_WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
INTEXURAOS_WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
INTEXURAOS_WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
INTEXURAOS_WHATSAPP_WABA_ID=your-waba-id
INTEXURAOS_WHATSAPP_APP_SECRET=your-app-secret

# Speechmatics (transcription)
INTEXURAOS_SPEECHMATICS_API_KEY=your-speechmatics-api-key

# LLM API Keys (for llm-orchestrator-service)
# These are stored in user-service per-user, but you can set defaults here for testing
# INTEXURAOS_OPENAI_API_KEY=your-openai-key
# INTEXURAOS_ANTHROPIC_API_KEY=your-anthropic-key
# INTEXURAOS_GOOGLE_AI_API_KEY=your-google-ai-key

# =============================================================================
# Internal Communication
# =============================================================================
INTEXURAOS_INTERNAL_AUTH_TOKEN=local-dev-internal-token

# =============================================================================
# Service URLs (for inter-service communication)
# These point to local dev ports set by the orchestrator
# =============================================================================
INTEXURAOS_USER_SERVICE_URL=http://localhost:8110
INTEXURAOS_PROMPTVAULT_SERVICE_URL=http://localhost:8111
INTEXURAOS_NOTION_SERVICE_URL=http://localhost:8112
INTEXURAOS_WHATSAPP_SERVICE_URL=http://localhost:8113
INTEXURAOS_MOBILE_NOTIFICATIONS_SERVICE_URL=http://localhost:8114
INTEXURAOS_API_DOCS_HUB_URL=http://localhost:8115
INTEXURAOS_LLM_ORCHESTRATOR_SERVICE_URL=http://localhost:8116

# =============================================================================
# GCS Buckets (fake-gcs-server)
# =============================================================================
INTEXURAOS_WHATSAPP_MEDIA_BUCKET=intexuraos-whatsapp-media-local
INTEXURAOS_STATIC_ASSETS_BUCKET=intexuraos-static-assets-local
